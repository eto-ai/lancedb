{
    "ignore_labels": ["ci", "chore"],
    "tag_resolver": {
        "filter": "python-.*",
        "transformer": {
            "pattern": "python-(.*)",
            "replacement": "$1"
        }
    },
    "pr_template": "- #{{TITLE}} by #{{AUTHOR}} in #{{URL}}",
    "categories": [
        {
            "title": "## 🏆 Highlights",
            "labels": ["python", "highlight"],
            "exhaustive": true
        },
        {
            "title": "## 🛠 Breaking Changes",
            "labels": ["python", "breaking-change"],
            "exhaustive": true
        },
        {
            "title": "## ⚠️ Deprecations ",
            "labels": ["python", "deprecation"],
            "exhaustive": true
        },
        {
            "title": "## 🎉 New Features",
            "labels": ["python", "enhancement"],
            "exhaustive": true
        },
        {
            "title": "## 🐛 Bug Fixes",
            "labels": ["python", "bug"],
            "exhaustive": true
        },
        {
            "title": "## 📚 Documentation",
            "labels": ["python", "documentation"],
            "exhaustive": true
        },
        {
            "title": "## 🚀 Performance Improvements",
            "labels": ["python", "performance"],
            "exhaustive": true
        }
    ]
}